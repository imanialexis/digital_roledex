<%= form_with(model: affair, local: true) do |form| %>
  <% if affair.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(affair.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% affair.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class = 'container '>
    <div class="field form-group col-sm-6 ">
      <%= form.label "Name" %>
      <%= form.text_field :name , class: 'form-control form-control-lg' , placeholder: 'ex. React.js Conference'%>
    </div>

    
    <div class="field form-group col-sm-6">
      <%= form.label 'Location' %>
      <%= form.text_field :location , class: 'form-control form-control-lg' , placeholder: 'ex. Boston,MS'%>
    </div>

    <div class="field form-group col-sm-6">
      <%= form.label 'Website' %>
      <%= form.text_field :website ,class: 'form-control form-control-lg' , placeholder: 'ex. https://reactjs.org/' %>
    </div>




    <div class="field form-group col-sm-6">
      <%= form.label 'Date' %> 
      
      <%= form.date_select :date  %>
    </div>

    <div class="field form-group col-sm-6 ">
      <%= form.label 'Description' %>
      <%= form.text_area :description,   class: 'form-control form-control-lg',:cols => 10, :rows => 5 %>
    </div>

    <div class="field form-group col-sm-6 row justify-content-center">
      <%= form.submit class: "btn btn-outline-primary" %>
    </div>
  <% end %>
</div>
