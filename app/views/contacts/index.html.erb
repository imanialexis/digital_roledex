<h1>Contacts</h1>

<table id ="table_id" class ="display">
  <thead>
    <tr>
      <th> Name</th>
      <th>Email</th>
      <th>Title</th>
      <th>Profesional Designation</th>
      <th>Company</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.fname %> <%=contact.lname%></td>
        <td><%= contact.email %></td>
        <td><%= contact.title %></td>
        <td><%= contact.pro_designation %></td>
         <td><%= contact.company %></td>
         <td><%= contact.location %></td>
        <td><%= contact.avatar %></td>
        
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path , class: "btn btn-light" %>


