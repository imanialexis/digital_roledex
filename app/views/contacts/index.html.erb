<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Email</th>
      <th>Title</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Linked in</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Other social</th>
      <th>Highlights</th>
      <th>Notes</th>
      <th>Avatar</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.fname %></td>
        <td><%= contact.lname %></td>
        <td><%= contact.email %></td>
        <td><%= contact.title %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.website %></td>
        <td><%= contact.linked_in %></td>
        <td><%= contact.facebook %></td>
        <td><%= contact.twitter %></td>
        <td><%= contact.other_social %></td>
        <td><%= contact.highlights %></td>
        <td><%= contact.notes %></td>
        <td><%= contact.avatar %></td>
        <td><%= contact.user_id %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

