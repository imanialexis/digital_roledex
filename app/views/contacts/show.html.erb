

<div class="card">
  <div class="card-header">
<h1><%= @contact.fname %> <%= @contact.lname %></h1>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      Email: <a href="mailto:<%= @contact.email %>"><%= @contact.email %></a> | Phone :<a href="tel:<%= @contact.phone %> "><%= @contact.phone %></a>
    </h5>
    <p class="card-text"><strong>Title: </strong> <%= @contact.title %></p>
    <p class="card-text"><strong>Profesional Designation: </strong> <%= @contact.pro_designation %></p>
    <p class="card-text"> <strong>Company: </strong> <%= @contact.company %></p>
    <p class="card-text">  <strong>Location: </strong><%= @contact.location %></p>
    <p class="card-text"><strong>Website: </strong> <a href="<%= @contact.website %>"><%= @contact.website %></a></p>
    <p class="card-text"> <strong>LinkedIn: </strong> <a href ="<%= @contact.linked_in %>"> <%= @contact.linked_in %></a></p>
    <p class="card-text"><strong>Facebook: </strong><%= @contact.facebook %></p>
    <p class="card-text"> <strong>Twitter: </strong> <a href="<%= @contact.twitter %>"><%= @contact.twitter %></a></p>
    <p class="card-text"><strong>Other Social: </strong><%= @contact.other_social %></p>
    <p class="card-text"></p>

  </div>
</div>

<div class="card">
  <div class="card-header">
   <h1>Notes</h1>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @contact.notes %></p>
   
  </div>
</div>





<%= link_to 'Edit', edit_contact_path(@contact) %> |
